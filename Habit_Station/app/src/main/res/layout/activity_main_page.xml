<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiejun.habit_station.MainPageActivity"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="31dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="47dp"
        android:text="How can I help you today?"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profile"
        android:layout_width="170dp"
        android:layout_height="154dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/main_page_1bt"
        android:textAlignment="center"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/today"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/today"
        android:layout_width="170dp"
        android:layout_height="154dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/main_page_2bt"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp" />

    <Button
        android:id="@+id/habits"
        android:layout_width="170dp"
        android:layout_height="154dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/main_page_3bt"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/profile"
        app:layout_constraintRight_toLeftOf="@+id/history"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/history"
        android:layout_width="170dp"
        android:layout_height="154dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/main_page_4bt"
        android:textAlignment="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today" />
</android.support.constraint.ConstraintLayout>
