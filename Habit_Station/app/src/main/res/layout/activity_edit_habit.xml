<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tiejun.habit_station.EditHabitActivity"
    android:background="@drawable/bg"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


    <EditText
        android:id="@+id/editTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/habit_title"
        android:paddingLeft="3dp"
        android:hint="change habit title here"
        android:inputType="textPersonName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp" />


    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:background="@drawable/habit_title"
        android:hint="Change Date here"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/editTitle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <EditText
        android:id="@+id/editReason"
        android:layout_width="wrap_content"
        android:layout_height="114dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/reason"
        android:ems="10"
        android:gravity="top"
        android:hint="Change Reason here"
        android:inputType="textPersonName"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDate" />

    <Button
        android:id="@+id/mon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/m_bt"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tue"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/tue"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/tu_bt"
        app:layout_constraintRight_toLeftOf="@+id/wed"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/wed"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/w_bt"
        app:layout_constraintRight_toLeftOf="@+id/thur"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/thur"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/th_bt"
        app:layout_constraintRight_toLeftOf="@+id/fri"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/fri"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/fri_bt"
        app:layout_constraintRight_toLeftOf="@+id/sat"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/sat"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/sa_bt"
        app:layout_constraintRight_toLeftOf="@+id/sun"
        android:layout_marginRight="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/sun"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/sun_bt"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/editReason" />

    <Button
        android:id="@+id/ok"
        android:layout_width="303dp"
        android:layout_height="45dp"
        android:background="@drawable/confirm_bt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/thur" />

    <Button
        android:id="@+id/delete"
        android:layout_width="302dp"
        android:layout_height="42dp"
        android:background="@drawable/delete_bt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ok"
        app:layout_constraintVertical_bias="0.272" />

</android.support.constraint.ConstraintLayout>